{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "RGB LED Indicator Config Schema",
    "description": "Defines the structure for an rgb_led_indicator config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "rgb_led_indicator" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "sr_writer_service": { "type": "string" },
                "red_pin": { "type": "integer" },
                "green_pin": { "type": "integer" },
                "blue_pin": { "type": "integer" },
                "is_common_anode": { "type": "boolean" }
            },
            "required": ["instance_name", "sr_writer_service", "red_pin", "green_pin", "blue_pin"]
        }
    },
    "required": ["type", "config"]
}