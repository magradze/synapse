{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "SN74HC595N Writer Config Schema",
    "description": "Defines the structure for an sn74hc595n_writer config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "sn74hc595n_writer" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "spi_bus_service": { "type": "string", "minLength": 1 },
                "latch_pin": { "type": "integer", "minimum": 0 },
                "num_chips": { "type": "integer", "minimum": 1 }
            },
            "required": ["instance_name", "spi_bus_service", "latch_pin"],
            "additionalProperties": false
        }
    },
    "required": ["type", "config"]
}