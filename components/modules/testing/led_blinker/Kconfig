menu "Led Blinker"

    config MODULE_LED_BLINKER_ENABLED
        bool "Enable Led Blinker Module"
        default y
        help
            Enables the led_blinker module for GPIO2-ზე LED-ის მარტივი ციმციმის მოდული.
            When enabled, the module provides full functionality.
            If disabled, the module code will not be included in 
            the final firmware, saving memory and processing resources.

    config LED_BLINKER_DEFAULT_INSTANCE_NAME
        string "Default Instance Name"
        default "main_led_blinker"
        depends on MODULE_LED_BLINKER_ENABLED
        help
            Default instance name for the led_blinker module.

    config LED_BLINKER_INSTANCE_NAME_MAX_LEN
        int "Maximum Instance Name Length"
        default 32
        range 8 64
        depends on MODULE_LED_BLINKER_ENABLED
        help
            Maximum length for the led_blinker module instance name string.

    config LED_BLINKER_GPIO
        int "GPIO Number for LED"
        default 2
        depends on MODULE_LED_BLINKER_ENABLED
        help
            GPIO number to which the LED is connected.

    config LED_BLINKER_INTERVAL_MS
        int "Blink Interval (ms)"
        default 500
        range 50 10000
        depends on MODULE_LED_BLINKER_ENABLED
        help
            Blinking interval in milliseconds.

endmenu
