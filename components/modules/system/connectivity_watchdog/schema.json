{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Connectivity Watchdog Config Schema",
    "description": "Defines the structure for a connectivity_watchdog config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "connectivity_watchdog" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "grace_period_sec": { "type": "integer", "minimum": 0 },
                "check_interval_sec": { "type": "integer", "minimum": 1 },
                "layers": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "properties": {
                            "type": { "type": "string", "enum": ["MQTT", "PING"] },
                            "timeout_sec": { "type": "integer", "minimum": 1 },
                            "target": { "type": "string" },
                            "actions": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "on_failure_count": { "type": "integer", "minimum": 1 },
                                        "do": { "type": "string" },
                                        "message": { "type": "string" },
                                        "alarm_name": { "type": "string" },
                                        "delay_ms": { "type": "integer" }
                                    },
                                    "required": ["on_failure_count", "do"]
                                }
                            }
                        },
                        "required": ["type", "timeout_sec", "actions"]
                    }
                }
            },
            "required": ["instance_name", "layers"]
        }
    },
    "required": ["type", "config"]
}