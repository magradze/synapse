menu "Test_Module Module Configuration"

    config MODULE_TEST_MODULE_ENABLED
        bool "Enable Test_Module Module"
        default y
        help
            Enables the test_module module for ტესტირებისთვის განკუთვნილი მოდული.
            When enabled, the module provides full functionality.
            If disabled, the module code will not be included in 
            the final firmware, saving memory and processing resources.

    config TEST_MODULE_DEFAULT_INSTANCE_NAME
        string "Default Instance Name"
        default "main_test_module"
        depends on MODULE_TEST_MODULE_ENABLED
        help
            Default instance name for the test_module module.

    config TEST_MODULE_INSTANCE_NAME_MAX_LEN
        int "Maximum Instance Name Length"
        default 32
        range 8 64
        depends on MODULE_TEST_MODULE_ENABLED
        help
            Maximum length for the test_module module instance name string.

endmenu
