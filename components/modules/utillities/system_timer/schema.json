{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "System Timer Config Schema",
    "description": "Defines the structure for a system_timer config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "system_timer" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 }
            },
            "required": ["instance_name"],
            "additionalProperties": false
        }
    },
    "required": ["type", "config"]
}