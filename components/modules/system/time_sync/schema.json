{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Time Sync Config Schema",
    "description": "Defines the structure for a time_sync config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "time_sync" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "timezone": { "type": "string" }
            },
            "required": ["instance_name"]
        }
    },
    "required": ["type", "config"]
}