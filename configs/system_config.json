{
  "firmware": {
    "version": "2.1.1",
    "description": "Implemented Service Locator pattern for I2C bus decoupling."
  },
  "global_config": {
    "device.id.prefix": "Synapse"
  },
  "modules": [
    {
      "type": "wifi_manager",
      "enabled": true,
      "config": {
        "instance_name": "main_wifi_manager"
      }
    },
    {
      "type": "ble_provisioning",
      "enabled": true,
      "config": {
        "instance_name": "main_ble_provisioning"
      }
    },
    {
      "type": "logger_module",
      "enabled": true,
      "config": {
        "instance_name": "main_logger"
      }
    },
    {
      "type": "led_blinker",
      "enabled": false,
      "config": {
        "instance_name": "main_led_blinker"
      }
    },
    {
      "type": "oled_display",
      "enabled": true,
      "config": {
        "instance_name": "main_oled_display"
      }
    },
        {
      "type": "rgb_led_indicator",
      "enabled": true,
      "config": {
          "instance_name": "status_led",
          "red_pin": 18,
          "green_pin": 19,
          "blue_pin": 5,
          "is_common_anode": true
      }
    },
    {
      "type": "health_monitor",
      "enabled": true,
      "config": {
          "instance_name": "health_monitor",
          "check_interval_sec": 60,
          "thresholds": {
              "min_free_heap_kb": 40,
              "task_stack_watermark_percent": 90
          }
      }
    }
  ]
}