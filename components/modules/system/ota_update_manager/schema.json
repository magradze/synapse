{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OTA Update Manager Config Schema",
    "description": "Defines the structure for an ota_update_manager config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "ota_update_manager" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "server_cert_pem_start": { "type": "string" },
                "pre_check_min_heap_kb": { "type": "integer" }
            },
            "required": ["instance_name"]
        }
    },
    "required": ["type", "config"]
}