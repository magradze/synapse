{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Button Input Config Schema",
    "description": "Defines the structure for a button_input config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "button_input" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "control_type": { "type": "string", "enum": ["gpio", "expander"] },
                "expander_service": { "type": "string" },
                "buttons": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": { "type": "string", "minLength": 1 },
                            "expander_pin": { "type": "integer", "minimum": 0 },
                            "gpio_pin": { "type": "integer", "minimum": 0 },
                            "active_level": { "type": "integer", "enum": [0, 1] }
                        },
                        "required": ["name"]
                    }
                }
            },
            "required": ["instance_name", "buttons"]
        }
    },
    "required": ["type", "config"]
}