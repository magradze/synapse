{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Health Monitor Config Schema",
    "description": "Defines the structure for a health_monitor config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "health_monitor" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "check_interval_sec": { "type": "integer" },
                "thresholds": {
                    "type": "object",
                    "properties": {
                        "min_free_heap_kb": { "type": "integer" },
                        "task_stack_watermark_percent": { "type": "integer" }
                    }
                }
            },
            "required": ["instance_name"]
        }
    },
    "required": ["type", "config"]
}