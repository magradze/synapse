menu "Timer Test Module"

    config MODULE_TIMER_TEST_ENABLED
        bool "Enable Timer Test Module"
        default y
        help
            Enables a test module to demonstrate and verify the functionality
            of the System Timer and RGB LED services.

    if MODULE_TIMER_TEST_ENABLED

        config TIMER_TEST_MODULE_DEFAULT_INSTANCE_NAME
            string "Default Instance Name"
            default "main_timer_test"
            help
                Default instance name for the Timer Test module.

        config TIMER_TEST_MODULE_INSTANCE_NAME_MAX_LEN
            int "Maximum Instance Name Length"
            default 32
            range 8 64
            help
                Maximum buffer size for the module's instance name string.

    endif # MODULE_TIMER_TEST_ENABLED

endmenu