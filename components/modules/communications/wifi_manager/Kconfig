menu "Wifi Manager"

    config MODULE_WIFI_MANAGER_ENABLED
        bool "Enable Wifi Manager Module"
        default y
        help
            Enables the wifi_manager module for WiFi connection management.
            When enabled, the module provides full functionality.
            If disabled, the module code will not be included in 
            the final firmware, saving memory and processing resources.

    config WIFI_MANAGER_DEFAULT_INSTANCE_NAME
        string "Default Instance Name"
        default "main_wifi_manager"
        depends on MODULE_WIFI_MANAGER_ENABLED
        help
            Default instance name for the wifi_manager module.

    config WIFI_MANAGER_INSTANCE_NAME_MAX_LEN
        int "Maximum Instance Name Length"
        default 32
        range 8 64
        depends on MODULE_WIFI_MANAGER_ENABLED
        help
            Maximum length for the wifi_manager module instance name string.

    if MODULE_WIFI_MANAGER_ENABLED

        config WIFI_MANAGER_NVS_NAMESPACE
            string "NVS Namespace"
            default "wifi_creds"
            help
                NVS (Non-Volatile Storage) namespace, სადაც ინახება 
                WiFi-ს მონაცემები (SSID, პაროლი).

        config WIFI_MANAGER_NVS_SSID_KEY
            string "NVS SSID Key"
            default "ssid"
            help
                NVS გასაღები შენახული WiFi ქსელის სახელისთვის (SSID).

        config WIFI_MANAGER_NVS_PASSWORD_KEY
            string "NVS Password Key"
            default "password"
            help
                NVS გასაღები შენახული WiFi ქსელის პაროლისთვის.

        config WIFI_MANAGER_MAX_RECONNECT_ATTEMPTS
            int "ხელახლა დაკავშირების მცდელობების რაოდენობა"
            default 10
            help
                მაქსიმალური მცდელობების რაოდენობა WiFi ქსელთან 
                ხელახლა დასაკავშირებლად კავშირის დაკარგვისას.
                -1 ნიშნავს უსასრულო მცდელობას.

        config WIFI_MANAGER_RECONNECT_DELAY_MS
            int "ხელახლა დაკავშირების დაყოვნება (მილიწამები)"
            default 5000
            help
                დაყოვნების დრო მილიწამებში ორ ხელახლა დაკავშირების
                მცდელობას შორის.

    endif # MODULE_WIFI_MANAGER_ENABLED
endmenu
