menu "Command Router & System Shell"

    config MODULE_COMMAND_ROUTER_ENABLED
        bool "Enable Command Router Module"
        default y
        help
            Enables the command_router module for central command processing and system shell.
            When enabled, the module provides full functionality.
            If disabled, the module code will not be included in the final firmware.

    if MODULE_COMMAND_ROUTER_ENABLED

        config COMMAND_ROUTER_DEFAULT_INSTANCE_NAME
            string "Default Instance Name"
            default "main_command_router"
            help
                Default instance name for the command_router module.

        config COMMAND_ROUTER_INSTANCE_NAME_MAX_LEN
            int "Maximum Instance Name Length"
            default 32
            range 8 64
            help
                Maximum length for the command_router module instance name string.

        config COMMAND_ROUTER_ENABLE_SERIAL_SHELL
            bool "Enable Interactive Serial Shell"
            default y
            help
                If enabled, an interactive command-line interface (CLI) will be
                available on the default serial port.

        config COMMAND_ROUTER_PROMPT
            string "Serial Shell Prompt"
            default "SYNAPSE> "
            depends on COMMAND_ROUTER_ENABLE_SERIAL_SHELL
            help
                The text prompt to display in the serial shell.

        config COMMAND_ROUTER_PROMPT_MAX_LEN
            int "Maximum length for the shell prompt"
            default 24
            depends on COMMAND_ROUTER_ENABLE_SERIAL_SHELL
            help
                Sets the maximum buffer size for the serial shell prompt string.

        config COMMAND_ROUTER_MAX_COMMANDS
            int "Maximum Registered Commands"
            default 32
            range 8 128
            help
                The maximum number of commands that can be registered in the system.

        config COMMAND_ROUTER_MAX_ARGS
            int "Maximum Arguments per Command"
            default 16
            range 4 32
            help
                The maximum number of arguments (including the command itself)
                that the shell can parse.

        config COMMAND_ROUTER_MAX_CMD_LEN
            int "Maximum command string length for events"
            default 128
            help
                Maximum length of a command string passed via an event.

        config COMMAND_ROUTER_SERIAL_TASK_STACK_SIZE
            int "Serial Shell Task Stack Size"
            default 4096
            depends on COMMAND_ROUTER_ENABLE_SERIAL_SHELL
            help
                Stack size in bytes for the interactive serial shell task.

        config COMMAND_ROUTER_SERIAL_TASK_PRIORITY
            int "Serial Shell Task Priority"
            default 5
            range 1 24
            depends on COMMAND_ROUTER_ENABLE_SERIAL_SHELL
            help
                Priority for the interactive serial shell task.

    endif # MODULE_COMMAND_ROUTER_ENABLED

endmenu