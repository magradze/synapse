{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "WiFi Manager Config Schema",
    "description": "Defines the structure for a wifi_manager config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "wifi_manager" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "storage_service": { "type": "string", "minLength": 1 }
            },
            "required": ["instance_name", "storage_service"],
            "additionalProperties": false
        }
    },
    "required": ["type", "config"]
}