{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Watchdog Manager Config Schema",
    "description": "Defines the structure for a watchdog_manager config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "watchdog_manager" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "check_interval_ms": { "type": "integer" },
                "heartbeat_timeout_ms": { "type": "integer" }
            },
            "required": ["instance_name"]
        }
    },
    "required": ["type", "config"]
}