menu "Ota Update Manager"

    config MODULE_OTA_UPDATE_MANAGER_ENABLED
        bool "Enable Ota Update Manager Module"
        default y
        help
            Enables the ota_update_manager module for Handles secure Over-The-Air firmware updates.
            When enabled, the module provides full functionality.
            If disabled, the module code will not be included in 
            the final firmware, saving memory and processing resources.

    config OTA_UPDATE_MANAGER_DEFAULT_INSTANCE_NAME
        string "Default Instance Name"
        default "main_ota_update_manager"
        depends on MODULE_OTA_UPDATE_MANAGER_ENABLED
        help
            Default instance name for the ota_update_manager module.

    config OTA_UPDATE_MANAGER_INSTANCE_NAME_MAX_LEN
        int "Maximum Instance Name Length"
        default 32
        range 8 64
        depends on MODULE_OTA_UPDATE_MANAGER_ENABLED
        help
            Maximum length for the ota_update_manager module instance name string.

endmenu
