menu "MQTT Manager"

    config MODULE_MQTT_MANAGER_ENABLED
        bool "Enable MQTT Manager Module"
        default y
        help
            Enables the mqtt_manager module for handling MQTT connectivity,
            forwarding remote commands, and publishing system status updates.

    if MODULE_MQTT_MANAGER_ENABLED

        config MQTT_MANAGER_DEFAULT_INSTANCE_NAME
            string "Default Instance Name"
            default "main_mqtt_manager"
            help
                Default instance name for the mqtt_manager module.

        config MQTT_MANAGER_INSTANCE_NAME_MAX_LEN
            int "Maximum Instance Name Length"
            default 32
            range 8 64
            help
                Maximum length for the mqtt_manager module instance name string.

    endif # MODULE_MQTT_MANAGER_ENABLED

endmenu