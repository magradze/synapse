menu "I2C Bus"

    config MODULE_I2C_BUS_ENABLED
        bool "Enable I2C Bus Module"
        default y
        help
            Enables the i2c_bus module for A module for I2C Bus.

    config I2C_BUS_DEFAULT_INSTANCE_NAME
        string "Default Instance Name"
        default "main_i2c_bus"
        depends on MODULE_I2C_BUS_ENABLED
        help
            Default instance name for the i2c_bus module.

    config I2C_BUS_INSTANCE_NAME_MAX_LEN
        int "Maximum Instance Name Length"
        default 32
        range 8 64
        depends on MODULE_I2C_BUS_ENABLED
        help
            Maximum length for the i2c_bus module instance name string.

endmenu
