menu "SPI Bus"

    config MODULE_SPI_BUS_ENABLED
        bool "Enable SPI Bus Module"
        default y
        help
            Enables the spi_bus module for A centralized, thread-safe driver for an SPI hardware bus..

    config SPI_BUS_DEFAULT_INSTANCE_NAME
        string "Default Instance Name"
        default "main_spi_bus"
        depends on MODULE_SPI_BUS_ENABLED
        help
            Default instance name for the spi_bus module.

    config SPI_BUS_INSTANCE_NAME_MAX_LEN
        int "Maximum Instance Name Length"
        default 32
        range 8 64
        depends on MODULE_SPI_BUS_ENABLED
        help
            Maximum length for the spi_bus module instance name string.

endmenu
