{
    "name": "security_status_reporter",
    "version": "1.0.0",
    "description": "Reports Secure Boot and Flash Encryption status.",
    "author": "Synapse Framework Team",
    "init_function": "security_status_reporter_create",
    "init_level": 22,
    "dependencies": [],
    "type": "security",
    "build_enabled": true,
    "conditional_config": "CONFIG_MODULE_SECURITY_STATUS_REPORTER_ENABLED",
    "runtime_commands": {
        "start": "security_status_reporter_start",
        "stop": "security_status_reporter_disable",
        "enable": "security_status_reporter_enable",
        "disable": "security_status_reporter_disable",
        "reconfigure": "security_status_reporter_reconfigure",
        "status": "security_status_reporter_get_status",
        "handle_event": "security_status_reporter_handle_event"
    },
    "mqtt_interface": {
        "publishes": {
            "security_status": "state/security/status"
        },
        "subscribes": {
            "security_status_control": "control/security/status"
        }
    }
}