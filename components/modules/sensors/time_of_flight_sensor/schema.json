{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Time of Flight Sensor Config Schema",
    "description": "Defines the structure for a time_of_flight_sensor config.json entry.",
    "type": "object",
    "properties": {
        "type": { "const": "time_of_flight_sensor" },
        "enabled": { "type": "boolean" },
        "config": {
            "type": "object",
            "properties": {
                "instance_name": { "type": "string", "minLength": 1 },
                "i2c_bus_name": { "type": "string" },
                "update_interval_sec": { "type": "integer", "minimum": 1 }
            },
            "required": ["instance_name", "i2c_bus_name"]
        }
    },
    "required": ["type", "config"]
}