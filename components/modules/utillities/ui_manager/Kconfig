menu "UI Manager"

    config MODULE_UI_MANAGER_ENABLED
        bool "Enable UI Manager Module"
        default y
        help
            Enables the ui_manager module for Manages the user interface, including menus and status screens..

    config UI_MANAGER_DEFAULT_INSTANCE_NAME
        string "Default Instance Name"
        default "main_ui_manager"
        depends on MODULE_UI_MANAGER_ENABLED
        help
            Default instance name for the ui_manager module.

    config UI_MANAGER_INSTANCE_NAME_MAX_LEN
        int "Maximum Instance Name Length"
        default 32
        range 8 64
        depends on MODULE_UI_MANAGER_ENABLED
        help
            Maximum length for the ui_manager module instance name string.

endmenu
