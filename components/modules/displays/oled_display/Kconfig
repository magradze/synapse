menu "Oled_Display Module Configuration"

    config MODULE_OLED_DISPLAY_ENABLED
        bool "Enable Oled_Display Module"
        default y
        help
            Enables the oled_display module for OLED display driver.
            When enabled, the module provides full functionality.
            If disabled, the module code will not be included in 
            the final firmware, saving memory and processing resources.

    config OLED_DISPLAY_DEFAULT_INSTANCE_NAME
        string "Default Instance Name"
        default "main_oled_display"
        depends on MODULE_OLED_DISPLAY_ENABLED
        help
            Default instance name for the oled_display module.

    config OLED_DISPLAY_INSTANCE_NAME_MAX_LEN
        int "Maximum Instance Name Length"
        default 32
        range 8 64
        depends on MODULE_OLED_DISPLAY_ENABLED
        help
            Maximum length for the oled_display module instance name string.

endmenu
